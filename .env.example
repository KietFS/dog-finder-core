# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
# For AWS RDS: set DB_HOST to the RDS Endpoint (SSL is auto-enabled when NODE_ENV=production)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=dog_finder_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis Cache
# For AWS ElastiCache: set REDIS_HOST to the Primary Endpoint
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=3600
# Set to true if ElastiCache has in-transit encryption (TLS) enabled
REDIS_TLS=false

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=Dog Finder API
SWAGGER_DESCRIPTION=Production-ready RESTful API that mimics TheDogAPI
SWAGGER_VERSION=1.0
SWAGGER_PATH=api

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
